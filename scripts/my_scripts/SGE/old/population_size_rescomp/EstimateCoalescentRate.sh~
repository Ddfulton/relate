#!/bin/bash

#$ -V
#$ -j y
#$ -P myers.prjc -q short.qc

echo "***********************************************"
echo "SGE job ID: "$JOB_ID
echo "SGE task ID: "$SGE_TASK_ID
echo "Run on host: "`hostname`
echo "Operating system: "`uname -s`
echo "Username: "`whoami`
echo "Started at: "`date`
echo "***********************************************"

chr=${SGE_TASK_ID}
../bin/RelateCoalescentRate --mode CoalescentRateForSection --pos ../data/pos_${pop}.txt --mut relate_chr${chr}_${pop}_pre.mut -i relate_chr${chr}_${pop}  -o relate_chr${chr}_${pop} > $log

../bin/RelateMutationRate --mode WithContextForSection --pop $pop1,$pop2 --samples ../1000GP_Phase3_${pop}.sample --mask ../data/20140520.chr${chr}.pilot_mask.fasta --ancestor ../data/human_ancestor_${chr}.fa --mut relate_chr${chr}_${pop}_pre.mut -i relate_chr${chr}_${pop} -o relate_chr${chr} > $log

echo "***********************************************"
echo "Finished at: "`date`
echo "***********************************************"
exit 0

