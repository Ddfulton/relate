#!/bin/bash

#$ -cwd -V
#$ -j y
#$ -P myers.prjc -q short.qc

echo "***********************************************"
echo "SGE job ID: "$JOB_ID
echo "SGE task ID: "$SGE_TASK_ID
echo "Run on host: "`hostname`
echo "Operating system: "`uname -s`
echo "Username: "`whoami`
echo "Started at: "`date`
echo "***********************************************"

chr=${SGE_TASK_ID}

../bin/RelateTools --mode CreateArgFileForSubpopulation --pop $pop1,$pop2 --samples ../data/1000GP_Phase3_sub.sample --arg ../data/relate_chr${chr}.arg --mut ../data/relate_chr${chr}.mut -o relate_chr${chr}_${pop}_pre > $log
../bin/RelateTools --mode CreatePosFile --mask ../data/20140520.chr${chr}.pilot_mask.fasta --ancestor ../data/human_ancestor_${chr}.fa --mut relate_chr${chr}_${pop}_pre.mut -o ../data/pos_${pop}.txt > $log

cp relate_chr${chr}_${pop}_pre.arg relate_chr${chr}_${pop}.arg
cp relate_chr${chr}_${pop}_pre.mut relate_chr${chr}_${pop}.mut

echo "***********************************************"
echo "Finished at: "`date`
echo "***********************************************"
exit 0




